@model ZatcaEGS.Models.DeviceSetup
@{
    ViewData["Title"] = "Home";
}

<div class="container mt-n25">
    <div class="text-center">
        <h2 class="display-4 mb-4">Zatca eInvoice Generation System</h2>
        <h2 class="display-6 mb-5">Manager IO - Zatca Integration</h2>

        @if (@Model.IsRegistered())
        {
            <div class="alert alert-success" role="alert">
                <h3 class="mb-3">Device is registered</h3>
                <p><strong>Registration Name:</strong> @Model.RegistrationName</p>
                <p><strong>CSR Type:</strong> @Model.EnvironmentType</p>
                <p><strong>CSR Common Name:</strong> @Model.CsrCommonName</p>
                <p><strong>CSR Serial Number:</strong> @Model.CsrSerialNumber</p>
            </div>
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                <h2 class="mb-3">Device is not registered</h2>
                <p>Please register your device to proceed.</p>
            </div>
        }
    </div>
</div>
